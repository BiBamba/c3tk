#!/usr/bin/env bash
alias tools='docker run --rm -it -v ~/:/root tools:latest bash'
alias aws='docker run --rm -it -v ~/.aws:/root/.aws tools:latest aws'
alias bosh='docker run --rm -it -v ~/.bosh:/root/.bosh -v $HOME/:/root tools:latest bosh'
alias cf='docker run --rm -it -v :/root/.cf tools:latest cf'
alias cc-me='docker run --rm -w /ccme -it -v $PWD:/ccme tools:latest cc-me'
alias sipcalc='docker run --rm -it tools:latest sipcalc'
alias whois='docker run --rm -it tools:latest whois'
alias netcat='docker run --rm -it tools:latest netcat'
alias tcpdump='docker run --rm -it tools:latest tcpdump'
alias tig='docker run --rm -w /app -it -v $PWD:/app tools:latest tig'
alias nmap='docker run --rm -it tools:latest nmap'
alias tmux='docker run --rm -w /app -it -v $PWD:/app tools:latest tmux'
alias tmux='docker run --rm -w /app -it -v $PWD:/app tools:latest gpg'
alias credhub='docker run --rm -it -v ~/.credhub:/root/.credhub tools:latest credhub'
alias genesis='touch ~/.vaultrc ~/.saferc && docker run --rm -w /genesis -it -v ~/.ssh:/root/.ssh -v ~/.saferc:/root/.saferc -v ~/.vaultrc:/root/vaultrc -v ~/.credhub:/root/.credhub -v ~/.bosh:/root/.bosh -v ~/.cf:/root/.cf -v $PWD:/genesis tools:latest genesis'
alias gcloud='docker run --rm -it -v ~/.gcp:/root/.gcp tools:latest gcloud'
alias gsutil='docker run --rm -it -v ~/.gcp:/root/.gcp tools:latest gsutil'
alias jq='docker run --rm -it tools:latest /bin/jq'
alias fly='touch ~/.flyrc && docker run --rm -it -v ~/.flyrc:/root/.flyrc tools:latest fly'
alias k9s='docker run --rm -it -v ~/.kube:/root/.kube -v ~/.config:/root/config tools:latest k9s'
alias kubectl='docker run --rm -it -v ~/.kube:/root/.kube tools:latest kubectl'
alias spruce='docker run --rm -it -v $PWD:/root tools:latest spruce'
alias safe='touch ~/.saferc ~/.vaultrc && docker run --rm -it -v ~/.saferc:/root/.saferc -v ~/.vaultrc:/root/.vaultrc tools:latest safe'
alias vault='touch ~/.vaultrc && docker run --rm -it -v ~/.vaultrc:/root/.vaultrc -v $HOME/:/root tools:latest vault'
