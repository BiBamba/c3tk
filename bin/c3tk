#!/usr/bin/env bash

cmd="${1}"

docker_run() {
  exec docker run --rm "${@}" -w /w -v$PWD:/w
}

touch ~/.saferc ~/.vaultrc ~/.flyrc

# Allow this script to be symlinked as the actual command name :)
if [[ ${0//*\/} == "c3tk" ]] 
then shift
else cmd="${0//*\/}"
fi

case "${cmd}" in 
  (shell)
    docker_run \
      -it \
      -v ~/:/root \
      "nix-tools:latest" bash "${@}"
    ;;
  (aws)
    docker_run \
      -it \
      -v ~/.aws:/root/.aws \
      "amazon/aws-cli" aws "${@}"
    ;;
  (az)
    docker_run \
      -it \
      -v ~/.azure:/root/.azure \
      "mcr.microsoft.com/azure-cli" az "${@}"
    ;;
  (bosh)
    docker_run \
      -it \
      -v ~/.bosh:/root/.bosh \
      "nix-tools:latest" bosh "${@}"
    ;;
  (cf)
    docker_run \
      -it \
      -v :/root/.cf \
      "nix-tools:latest" cf "${@}"
    ;;
  (cc-me)
    docker_run \
      -i \
      --log-driver=none -a stdin -a stdout -a stderr \
      "nix-tools:latest" cc-me "${@}"
    ;;
  (sipcalc)
    docker_run \
      -i \
      --log-driver=none -a stdin -a stdout -a stderr \
      "nix-tools:latest" sipcalc "${@}"
    ;;
  (whois)
    docker_run \
      -i \
      --log-driver=none -a stdin -a stdout -a stderr \
      "nix-tools:latest" whois "${@}"
    ;;
  (netcat)
    docker_run \
      -i \
      --log-driver=none -a stdin -a stdout -a stderr \
      "nix-tools:latest" netcat "${@}"
    ;;
  (tcpdump)
    docker_run \
      -i \
      --log-driver=none -a stdin -a stdout -a stderr \
      "nix-tools:latest" tcpdump "${@}"
    ;;
  (tig)
    docker run --rm -it \
      "nix-tools:latest" tig "${@}"
    ;;
  (nmap)
    docker_run \
      -i \
      --log-driver=none -a stdin -a stdout -a stderr \
      "nix-tools:latest" nmap "${@}"
    ;;
  (tmux)
    docker_run \
      -it \
      "nix-tools:latest" tmux "${@}"
    ;;
  (gpg)
    docker_run \
      -i \
      --log-driver=none -a stdin -a stdout -a stderr \
      "nix-tools:latest" gpg "${@}"
    ;;
  (credhub)
    docker_run \
      -it \
      -v ~/.credhub:/root/.credhub \
      "nix-tools:latest" credhub "${@}"
    ;;
  (genesis)
    docker_run \
      -it \
      -v ~/.ssh:/root/.ssh \
      -v ~/.saferc:/root/.saferc \
      -v ~/.vaultrc:/root/vaultrc \
      -v ~/.credhub:/root/.credhub \
      -v ~/.bosh:/root/.bosh \
      -v ~/.cf:/root/.cf \
      "nix-tools:latest" genesis "${@}"
    ;;
  (gcloud)
    docker_run \
      -it \
      -v ~/.gcp:/root/.gcp \
      "gcr.io/google.com/cloudsdktool/cloud-sdk:latest" gcloud "${@}"
    ;;
  (gsutil)
    docker_run \
      -it \
      -v ~/.gcp:/root/.gcp \
      "gcp-tools:latest" gsutil "${@}"
    ;;
  (jq)
    docker_run \
      -i \
      --log-driver=none -a stdin -a stdout -a stderr \
      "nix-tools:latest" /bin/jq "${@}"
    ;;
  (fly)
    docker_run \
      -it \
      -v ~/.flyrc:/root/.flyrc \
      "nix-tools:latest" fly "${@}"
    ;;
  (k9s)
    docker_run \
      -it \
      -v ~/.kube:/root/.kube \
      -v ~/.config:/root/config \
      "nix-tools:latest" k9s "${@}"
    ;;
  (kubectl)
    docker_run \
      -it \
      -v ~/.kube:/root/.kube \
      "nix-tools:latest" kubectl "${@}"
    ;;
  (spruce)
    docker_run \
      -i \
      --log-driver=none -a stdin -a stdout -a stderr \
      "nix-tools:latest" spruce "${@}"
    ;;
  (safe)
    docker_run \
      -it \
      -v ~/.saferc:/root/.saferc \
      -v ~/.vaultrc:/root/.vaultrc \
      "nix-tools:latest" safe "${@}"
    ;;
  (vault)
    docker_run \
      -it \
      -v ~/.vaultrc:/root/.vaultrc \
      "nix-tools:latest" vault "${@}"
    ;;
esac

exit 0
