#!/usr/bin/env bash

cp aliases ~/.tools-aliases

if ! grep -q '~/.tools-aliases' ~/.bashrc 
then echo -e '\n[[ -s ~/.tools-aliases ]] && . ~/.tools-aliases' >> ~/.bashrc
fi

if ! grep  -q '~/.tools-aliases' ~/.zshrc
then echo -e '\n[[ -s ~/.tools-aliases ]] && . ~/.tools-aliases' >> ~/.zshrc
fi

exit 0
